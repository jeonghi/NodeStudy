<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container contact contact-show">
      <h2>작성한 글</h2>
      <div class="card">
        <div class="card-body">
          <h3 class="card-title"><%= content.name%></h3>
          <label>내용</label><span><%= content.content%></span>
          <br>
        </div>
      </div>
      <div class="contact-menu mt-2">
        <a href="/contents/<%= content._id %>/edit" class="btn btn-light mr-2">Edit</a>
        <form action="/contents/<%= content._id %>?_method=delete" method="post">
          <a href="#" class="btn btn-light" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
        </form>
      </div>
    </div>
  </body>
</html>
